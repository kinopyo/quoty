.activity.clearfix
  .avatar
    - if a.owner
      = user_avatar(a.owner, size: '60x60', class: 'img-circle')

  .body
    .title
      - if a.owner
        = link_to a.owner.name, a.owner
      - else
        someone
      = content_for :action
    .details
      = yield
    .timestamp
      = timeago a.trackable.try(:created_at) || a.created_at