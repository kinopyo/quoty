.activity.clearfix
  .avatar
    - if a.owner
      = image_tag a.owner.image, size: '60x60', class: 'img-circle'
  .body
    .title
      - if a.owner
        = link_to a.owner.name, a.owner
      - else
        someone
      = content_for :action
    .details
      = yield
    .timestamp
      = timeago a.created_at