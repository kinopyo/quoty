!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Quoty"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") Quoty
          .container.nav-collapse
            %ul.nav
              %li= link_to "English", language_path('english')
              %li= link_to "日本語", language_path('japanese')
              %li= link_to "中文", language_path('chinese')
            %ul.nav.pull-right
              - if signed_in?
                %li.dropdown
                  = link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do
                    = image_tag current_user.image, size: '24x24', class: 'avatar_tiny' if current_user.image
                    = current_user.name
                    %span.caret
                  %ul.dropdown-menu
                    %li= link_to t('.my_page'), current_user
                    %li= link_to t('.settings'), [:edit, current_user]
                    %li= link_to t('.sign_out'), logout_path
              - else
                %li= link_to "Sign in", login_path
            .pull-right
              = link_to new_quote_path, class: 'btn btn-primary' do
                %i.icon-pencil
                = t('.new_quote')

    .container
      = bootstrap_flash
      = yield

    %footer.footer
      .container
        %p= link_to 'About this site', about_path
        %p
          Designed and built by
          = link_to '@kinopyo', 'https://twitter.com/fantasyday'
        %p
          You can find the source code on
          = link_to 'Github', 'https://github.com/kinopyo/quoty'
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
