<script type="text/javascript">

  var _gaq = _gaq || [];
  <% if Rails.env.production? %>
    _gaq.push(['_setAccount', 'UA-37028618-1']);
    _gaq.push(['_setCustomVar', 1, 'UserType', '<%= current_user ? "Member" : "Guest" %>', 2]);
    <% if current_user %>
    _gaq.push(['_setCustomVar', 2, 'UserID', '<%= current_user.id %>', 3]);
    <% end %>
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

    <% if flash[:track_pageview] %>
      _gaq.push(['_trackPageview', <%= flash[:track_pageview] %>]);
    <% end %>
  <% end %>
</script>