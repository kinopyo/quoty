.well
  .page-header
    %h1= t('.users_page', user_name: @user.name)

  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", :href => "#activities"}= t('.activities')
    %li
      %a{"data-toggle" => "tab", :href => "#bookmarks"}= t('.bookmarks')
    %li
      %a{"data-toggle" => "tab", :href => "#posted_quotes"}= t('.posted_quotes')

  .tab-content
    #activities.tab-pane.active
      %ul.activities
        - @activities.each do |activity|
          %li= render_activity(activity, layout: 'layouts/activity_wrapper')
    #bookmarks.tab-pane
      .bookmarks
        %ul.bookmark_list
          - if @user.bookmarks.present?
            = render @user.bookmarks
          - else
            = t('.no_bookmark_yet')
    #posted_quotes.tab-pane
      - if @user.quotes.present?
        %ul#quotes= render @user.quotes
      - else
        %p= t('.no_quotes_posted_yet')
