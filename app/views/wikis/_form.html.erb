<%= simple_form_for @wiki, html: { class: 'form-horizontal wiki_form' }  do |f| %>
  <%= f.input :title, input_html: { class: 'span4' } %>
  <%= f.input :description, input_html: { rows: 5, class: 'span4' } %>
  <%= f.input :parent_id, as: :select, collection: Wiki.roots %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>