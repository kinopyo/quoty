.well
  %ul.social-login
    %li
      = link_to '/auth/twitter', class: 'btn' do
        %i.icon-twitter
        = t('.login_with_twitter')
    %li
      = link_to '/auth/facebook', class: 'btn' do
        %i.icon-facebook
        = t('.login_with_facebook')

  %p
    %strong= t('.dont_use_these_services?')
    = link_to t('.create_an_account'), new_identity_path
    = t('.or_login_below')

  = form_tag "/auth/identity/callback", class: 'form-inline' do
    = text_field_tag :auth_key, nil, placeholder: t('common.email')
    = password_field_tag :password, nil, placeholder: t('common.password')
    = submit_tag t('global.login'), class: 'btn'
  %p
    = link_to t('.forget_your_password?'), new_reset_password_path, class: 'reset_password_link secondary'
