= simple_nested_form_for @quote, html: { class: 'form-horizontal quote_form', multipart: true, autocomplete: 'off' } do |f|
  = f.input :content, controls_html: { class: 'col-md-8', rows: 5 }, placeholder: 'Quotes & Words...', autofocus: true
  = f.input :author_name, as: :string, placeholder: 'by whom', label: 'Author', controls_html: { data: { wiki_field: 'author_wiki_id' } }
  = f.input :source, placeholder: 'Book, Movie or any media', controls_html: { data: { wiki_field: 'source_wiki_id' } }
  = f.input :author_id, as: :hidden
  = f.input :source_wiki_id, as: :hidden
  = f.input :context, placeholder: 'Under what context or circumstances...', controls_html: { class: 'col-md-8', rows: 2 }
  - if @quote.persisted?
    = f.input :language, as: :select, collection: %w(english japanese chinese), prompt: 'Select language'
  .control-group
    = f.label :photos
    .controls
      .row= f.simple_fields_for :photos
      = f.link_to_add 'Add more ...', :photos, class: 'btn btn-sm add_more_photos'
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to 'Cancel', quotes_path, :class => 'btn'
