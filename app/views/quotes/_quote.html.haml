%li.quote
  .score{id: "quote#{quote.id}_score"}
    = render "votes/score", quote: quote
  %blockquote
    .quote_body= link_to quote.content, quote
    .meta_info
      = quote.name
      - if quote.source?
        %cite
          &mdash;《
          = auto_link(quote.source, html: { target: '_blank'}) { |text| truncate(text, length: 30) }
          》
